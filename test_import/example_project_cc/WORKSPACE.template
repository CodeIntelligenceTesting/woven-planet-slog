load("@bazel_tools//tools/build_defs/repo:http.bzl", "http_archive")

# To import slog into a project we simply need to fetch it using http_archive.
http_archive(
    name = "slog",
    url = "https://artifactory.pdx.l5.woven-planet.tech/repository/mothership/slog/slog-<version>.zip",
)

# Google test repo need to be imported to run a unit test program in the
# example repo. Note. this repo is not necessary to import to get Slog working.
http_archive(
    name = "com_github_google_googletest",
    sha256 = "9dc9157a9a1551ec7a7e43daea9a694a0bb5fb8bec81235d8a1e6ef64c716dcb",
    strip_prefix = "googletest-release-1.10.0",
    url = "https://github.com/google/googletest/archive/release-1.10.0.tar.gz",
)
